@model IEnumerable<Common.Views.OrdersView>
@{
    ViewBag.Title = "View Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Orders</h2>

@if (Model == null || Model.Count() == 0)
{
    <div style="color: Red"><b>No orders found</b></div>
}
else
{
    <table>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Buyer</th>
            <th>Order Status</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Buyer)
                </td>
                <td>
                    @if(item.OrderStatusID == 3)
                    {
                        @Html.DisplayFor(modelItem => item.OrderStatus)
                    }
                    else
                    {
                        @Html.DropDownListFor(modelItem => item.OrderStatus, (IEnumerable<SelectListItem>)ViewData["statusList"], "--Select Order Status--")
                        @Html.ValidationMessageFor(modelItem => item.OrderStatusID)
                        <br />
                        <input type="button" value="Update Order Status" onclick="location.href='@Url.Action("EditOrder", "Orders", new { id = item.OrderID, })'" />
                    }
                </td>
                <td>
                    <input type="button" value="View Order Details" onclick="location.href='@Url.Action("Details", "Orders", new { id = item.OrderID })'" />
                </td>
                <td>
                    @if (item.OrderStatusID != 3)
                    {
                        <input type="button" value="Complete Order" onclick="location.href='@Url.Action("DeleteOrder", "Orders", new { id = item.OrderID })'" />
                    }
                </td>
            </tr>
    }
    </table>
}